@model IEnumerable<PrjFarmacia_David.Models.ReporteVentas>

@{
    ViewData["Title"] = "IndexVentas";
}

<h1 class="text-center mb-4">Lista de Ventas</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-controller="Carrito" asp-action="IndexProductos" class="btn btn-success">Realizar Nueva Venta</a> |
            <a asp-action="ClienteNombre" class="btn btn-info">Buscar por Nombre del Cliente</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Fecha de Venta</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Vendedor</th>
                    <th scope="col">Total Venta</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.NumVenta</th>
                        <td>@item.FechaVenta.ToShortDateString()</td>
                        <td>@item.NombreCliente</td>
                        <td>@item.NombreVendedor</td>
                        <td>$@item.TotalVenta</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 0; i < ViewBag.PAGINAS; i++)
            {
                <li class="page-item @(i == (int)ViewBag.nropagina ? "active" : "")">
                    <a class="page-link" asp-action="IndexVentas" asp-route-nropagina="@i">@i</a>
                </li>
            }
        </ul>
    </nav>

    <div class="alert alert-success mt-3">
        <p class="mb-0">Total de ventas: @ViewBag.contador</p>
    </div>
</div