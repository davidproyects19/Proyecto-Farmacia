@model PrjFarmacia_David.Models.Producto

@{
    ViewData["Title"] = "DetailsProducto";
}

<h1 class="mb-4">Detalles del Producto</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>@Html.DisplayFor(model => model.Nombre)</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>@Html.DisplayFor(model => model.Descripcion)</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>@Html.DisplayFor(model => model.Precio)</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>@Html.DisplayFor(model => model.Cantidad)</td>
            </tr>
            <tr>
                <th>EliPro</th>
                <td>@Html.DisplayFor(model => model.EliPro)</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-sm btn-info" href="@Url.Action("EditProducto", new { id = Model.Id })">Editar</a>
    <a asp-action="IndexProductos" class="btn btn-warning">Volver</a>
</div>