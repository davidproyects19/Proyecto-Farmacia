@model IEnumerable<PrjFarmacia_David.Models.Producto>

@{
    ViewData["Title"] = "Productos por Nombre";
}

<h1>Productos por Nombre</h1>

@using (Html.BeginForm())
{
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Ingrese inicial del producto" name="letraNom">
        <button class="btn btn-success" type="submit">Consultar</button>
    </div>
}

<p>
    <a asp-action="IndexProductos" class="btn btn-primary">Volver</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Precio</td>
                    <td>@item.Cantidad</td>
                    <td>@item.EliPro</td>
                </tr>
            }
        </tbody>
    </table>
</div>